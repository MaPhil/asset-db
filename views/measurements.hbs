{{#> card title="Wichtige Messwerte"}}
  <p>Behalten Sie im Blick, wie viele Daten bereits in die Plattform übernommen wurden.</p>
  {{#if metrics.length}}
    <ul>
      {{#each metrics}}
        <li><strong>{{value}}</strong> {{label}}</li>
      {{/each}}
    </ul>
  {{else}}
    <p>Keine Messwerte verfügbar.</p>
  {{/if}}
  {{#if latestUpdate}}
    <p>Letztes Quellen-Update: {{latestUpdate}}</p>
  {{/if}}
{{/card}}

{{#> card title="Zeilen nach Quelle" headingTag="h3"}}
  {{#if sourceMetrics.length}}
    <table class="table">
      <thead>
        <tr>
          <th>Quelle</th>
          <th>Gesamtzeilen</th>
        </tr>
      </thead>
      <tbody>
        {{#each sourceMetrics}}
          <tr>
            <td><a href="/sources/{{id}}">{{name}}</a></td>
            <td>{{totalRows}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>Es wurden noch keine Quellenzeilen erfasst.</p>
  {{/if}}
{{/card}}
