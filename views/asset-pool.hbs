<div class="asset-pool-app" data-app="asset-pool" data-view="overview">
  <aside class="asset-pool-sidebar" aria-label="Asset pool navigation">
    <div class="sidebar-section">
      <a href="/asset-pool" class="sidebar-link sidebar-link--active" data-sidebar-overview>Asset Pool (overview)</a>
    </div>
    <div class="sidebar-section">
      <p class="sidebar-heading">Raw</p>
      <nav class="sidebar-list" data-raw-list aria-label="Raw tables"></nav>
      <button class="button button--ghost sidebar-import" type="button" data-open-import>
        Import Table
      </button>
    </div>
  </aside>
  <section class="asset-pool-content" data-region="content">
    <header class="page-header">
      <div>
        <h1 class="page-title">Asset Pool</h1>
        <p class="page-subtitle">
          The Asset Pool references data from your raw tables using your column mappings.
        </p>
      </div>
      <button class="button" type="button" data-open-import>Import Table</button>
    </header>
    <div class="asset-pool-body" data-overview-body>
      <div class="card card--empty" data-empty-state hidden>
        <h2>No data added</h2>
        <p>Please import a raw table to get started.</p>
        <button class="button" type="button" data-open-import>Import Table</button>
      </div>
      <div class="table-container" data-asset-pool-table hidden></div>
    </div>
  </section>
</div>

<div class="toast-container" role="status" aria-live="polite"></div>

<div class="modal" data-import-modal hidden>
  <div class="modal-dialog" role="dialog" aria-modal="true" aria-labelledby="import-modal-title">
    <header class="modal-header">
      <h2 id="import-modal-title">Import raw table</h2>
      <button class="icon-button" type="button" data-close-modal aria-label="Close import modal">&times;</button>
    </header>
    <div class="modal-body" data-import-stage></div>
  </div>
</div>
