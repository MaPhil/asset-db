<div
  class="asset-pool-app"
  data-app="asset-pool"
  data-view="raw"
  data-raw-table-id="{{rawTableId}}"
  data-missing="{{missing}}"
>
  <aside class="asset-pool-sidebar" aria-label="Navigation des Asset-Pools">
    <div class="sidebar-section">
      <a href="/asset-pool" class="sidebar-link" data-sidebar-overview>Asset-Pool (Übersicht)</a>
    </div>
    <div class="sidebar-section">
      <p class="sidebar-heading">Rohdaten</p>
      <nav class="sidebar-list" data-raw-list aria-label="Rohdatentabellen"></nav>
      <button class="button sidebar-import" type="button" data-open-import>
        Tabelle importieren
      </button>
    </div>
  </aside>
  <section class="asset-pool-content" data-region="content">
    <header class="page-header">
      <div>
        {{#if missing}}
          <h1 class="page-title">Rohdatentabelle nicht gefunden</h1>
          <p class="page-subtitle">Diese Rohdatentabelle wurde möglicherweise entfernt. Bitte wählen Sie eine andere Tabelle.</p>
        {{else}}
          <h1 class="page-title">{{rawTableTitle}}</h1>
          <div class="page-meta">
            <span class="badge" data-raw-meta></span>
          </div>
        {{/if}}
      </div>
      <div class="page-actions">
        {{#unless missing}}
          <button class="button button--ghost" type="button" data-archive-raw>Rohdatentabelle archivieren</button>
          <button class="button button--ghost" type="button" data-edit-mapping>Bearbeiten</button>
        {{/unless}}
      </div>
    </header>
    <div class="asset-pool-body" data-raw-body>
      {{#if missing}}
        <div class="card card--empty">
          <h2>Rohdatentabelle nicht verfügbar</h2>
          <p>Die angeforderte Rohdatentabelle wurde nicht gefunden. Bitte wählen Sie eine andere Tabelle aus der Liste.</p>
        </div>
      {{else}}
        <div class="table-container" data-raw-table {{#unless hasRows}}hidden{{/unless}}></div>
        <div class="card card--empty" data-raw-empty {{#if hasRows}}hidden{{/if}}>
          <h2>Datei enthielt keine Zeilen</h2>
          <p>Bitte erneut importieren.</p>
        </div>
      {{/if}}
    </div>
  </section>
</div>

<div class="toast-container" role="status" aria-live="polite"></div>

<div class="modal" data-import-modal hidden>
  <div class="modal-dialog" role="dialog" aria-modal="true" aria-labelledby="import-modal-title">
    <header class="modal-header">
      <h2 id="import-modal-title">Rohdatentabelle importieren</h2>
      <button class="icon-button" type="button" data-close-modal aria-label="Import-Dialog schließen">&times;</button>
    </header>
    <div class="modal-body" data-import-stage></div>
  </div>
</div>
