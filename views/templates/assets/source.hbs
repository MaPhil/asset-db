{{#> card}}
  <h2>Quelle: {{source.name}}</h2>
  <p>
    Originaldatei: {{source.original_filename}}<br />
    Hochgeladen: {{source.created_at}}<br />
    Gespeichert unter: {{source.stored_path}}
  </p>
{{/card}}

{{#> card title="Vorschau" headingTag="h3"}}
  {{#if rows.length}}
    <table class="table">
      <thead>
        <tr>
          {{#each headers}}
            <th>{{this}}</th>
          {{/each}}
        </tr>
      </thead>
      <tbody>
        {{#each rows}}
          <tr>
            {{#each ../headers}}
              <td>{{lookup ../this this}}</td>
            {{/each}}
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>FÃ¼r diese Quelle wurden noch keine Zeilen erfasst.</p>
  {{/if}}
{{/card}}
