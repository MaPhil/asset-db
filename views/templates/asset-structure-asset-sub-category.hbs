<div
  class="asset-structure-app"
  data-app="asset-structure"
  data-topic-id="{{topic.id}}"
  data-sub-topic-id="{{subTopic.id}}"
  data-asset-sub-category-id="{{assetSubCategory.id}}"
>
  <aside class="asset-structure-sidebar" aria-label="Asset-Struktur-Navigation">
    <div class="sidebar-section">
      <a href="/asset-structure" class="sidebar-link sidebar-link--active">Themengebiete</a>
      <a href="/asset-types" class="sidebar-link">Asset-Typen</a>
    </div>
  </aside>
  <section class="asset-structure-content">
    <header class="page-header">
      <div>
        <h1 class="page-title">{{#if assetSubCategory.displayTitle}}{{assetSubCategory.displayTitle}}{{else}}Unbenannte AssetUnterKategorie{{/if}}</h1>
        <p class="page-subtitle">Aktualisieren Sie die AssetUnterKategorie und verwalten Sie die zugehörigen Gruppen.</p>
      </div>
      <div class="page-actions">
        {{#if assetSubCategory.measuresUrl}}
          <a class="button button--ghost" href="{{assetSubCategory.measuresUrl}}">Maßnahmen anzeigen</a>
        {{/if}}
        <a class="button button--ghost" href="/asset-structure/{{topic.id}}/{{subTopic.id}}">Zum Sub-Themengebiet</a>
        <a class="button button--ghost" href="/asset-structure/{{topic.id}}">Zum Themengebiet</a>
      </div>
    </header>

    <nav class="breadcrumb" aria-label="Breadcrumb">
      <a href="/asset-structure">Asset-Struktur</a>
      <span aria-hidden="true">›</span>
      <a href="/asset-structure/{{topic.id}}">{{topic.displayTitle}}</a>
      <span aria-hidden="true">›</span>
      <a href="/asset-structure/{{topic.id}}/{{subTopic.id}}">{{subTopic.displayTitle}}</a>
      <span aria-hidden="true">›</span>
      <span aria-current="page">{{#if assetSubCategory.displayTitle}}{{assetSubCategory.displayTitle}}{{else}}Unbenannte AssetUnterKategorie{{/if}}</span>
    </nav>

    <div class="structure-body">
      <section class="card structure-card" aria-labelledby="asset-sub-category-details-title">
        <div class="section-header">
          <h2 class="section-title" id="asset-sub-category-details-title">AssetUnterKategorie Informationen</h2>
          <button class="button" type="button">Änderungen speichern</button>
        </div>
        <form class="form-grid form-grid--two">
          <div class="form-field form-field--full">
            <label for="asset-sub-category-name">Titel</label>
            <input
              id="asset-sub-category-name"
              type="text"
              name="title"
              value="{{assetSubCategory.title}}"
              placeholder="Titel der AssetUnterKategorie"
              readonly
              aria-readonly="true"
            />
          </div>
          <div class="form-field">
            <label for="asset-sub-category-owner">Verantwortlich</label>
            <input
              id="asset-sub-category-owner"
              type="text"
              name="owner"
              value="{{assetSubCategory.owner}}"
              placeholder="z. B. Asset-Governance"
            />
          </div>
          <div class="form-field">
            <label for="asset-sub-category-integrity">Integrität</label>
            <select id="asset-sub-category-integrity" name="integrity">
              <option value="" {{#unless assetSubCategory.integrity}}selected{{/unless}}>Bewertung auswählen</option>
              <option {{#if (eq assetSubCategory.integrity 'Low')}}selected{{/if}}>Niedrig</option>
              <option {{#if (eq assetSubCategory.integrity 'Moderate')}}selected{{/if}}>Mittel</option>
              <option {{#if (eq assetSubCategory.integrity 'High')}}selected{{/if}}>Hoch</option>
            </select>
          </div>
          <div class="form-field">
            <label for="asset-sub-category-availability">Verfügbarkeit</label>
            <select id="asset-sub-category-availability" name="availability">
              <option value="" {{#unless assetSubCategory.availability}}selected{{/unless}}>Bewertung auswählen</option>
              <option {{#if (eq assetSubCategory.availability 'Low')}}selected{{/if}}>Niedrig</option>
              <option {{#if (eq assetSubCategory.availability 'Moderate')}}selected{{/if}}>Mittel</option>
              <option {{#if (eq assetSubCategory.availability 'High')}}selected{{/if}}>Hoch</option>
            </select>
          </div>
          <div class="form-field">
            <label for="asset-sub-category-confidentiality">Vertraulichkeit</label>
            <select id="asset-sub-category-confidentiality" name="confidentiality">
              <option value="" {{#unless assetSubCategory.confidentiality}}selected{{/unless}}>Bewertung auswählen</option>
              <option {{#if (eq assetSubCategory.confidentiality 'Low')}}selected{{/if}}>Niedrig</option>
              <option {{#if (eq assetSubCategory.confidentiality 'Moderate')}}selected{{/if}}>Mittel</option>
              <option {{#if (eq assetSubCategory.confidentiality 'High')}}selected{{/if}}>Hoch</option>
            </select>
          </div>
          <div class="form-field form-field--full">
            <label for="asset-sub-category-description">Beschreibung</label>
            <textarea
              id="asset-sub-category-description"
              name="description"
              rows="4"
              placeholder="Beschreiben Sie, wie diese AssetUnterKategorie verwendet wird"
            >{{assetSubCategory.description}}</textarea>
          </div>
        </form>
      </section>

      <section class="card structure-card" aria-labelledby="asset-sub-category-groups-title">
        <div class="section-header">
          <h2 class="section-title" id="asset-sub-category-groups-title">Gruppen</h2>
          <button class="button" type="button" data-open-structure-modal="group">Gruppe hinzufügen</button>
        </div>
        {{#if groups.length}}
          <div class="table-wrapper">
            <table class="table table--interactive" aria-describedby="asset-sub-category-groups-title">
              <thead>
                <tr>
                  <th scope="col">Gruppe</th>
                  <th scope="col">Status</th>
                  <th scope="col">Asset-Typ</th>
                  <th scope="col">Zuletzt aktualisiert</th>
                </tr>
              </thead>
              <tbody>
                {{#each groups}}
                  <tr>
                    <td>
                      <a class="table-link" href="/asset-structure/{{../topic.id}}/{{../subTopic.id}}/{{../assetSubCategory.id}}/groups/{{id}}">{{title}}</a>
                    </td>
                    <td>
                      <a class="table-link" href="/asset-structure/{{../topic.id}}/{{../subTopic.id}}/{{../assetSubCategory.id}}/groups/{{id}}">{{status}}</a>
                    </td>
                    <td>
                      <a class="table-link" href="/asset-structure/{{../topic.id}}/{{../subTopic.id}}/{{../assetSubCategory.id}}/groups/{{id}}">{{assetType}}</a>
                    </td>
                    <td>
                      <a class="table-link" href="/asset-structure/{{../topic.id}}/{{../subTopic.id}}/{{../assetSubCategory.id}}/groups/{{id}}">{{updatedAt}}</a>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        {{else}}
          <p class="empty-state">Es sind noch keine Gruppen mit dieser AssetUnterKategorie verknüpft.</p>
        {{/if}}
      </section>
    </div>
  </section>
</div>

<div class="modal" data-structure-modal="group" hidden aria-hidden="true">
  <div class="modal-dialog" role="dialog" aria-modal="true" aria-labelledby="group-modal-title">
    <header class="modal-header">
      <h2 id="group-modal-title">Gruppe hinzufügen</h2>
      <button class="icon-button" type="button" aria-label="Gruppenformular schließen" data-close-structure-modal>&times;</button>
    </header>
    <div class="modal-body">
      <form class="form-grid">
        <div class="form-field">
          <label for="group-title">Titel</label>
          <input
            id="group-title"
            type="text"
            name="title"
            placeholder="z. B. Kundenorientierte Anwendungen"
            data-auto-focus
          />
        </div>
        <div class="form-field">
          <label for="group-description">Beschreibung</label>
          <textarea
            id="group-description"
            name="description"
            rows="4"
            placeholder="Geben Sie eine kurze Zusammenfassung dieser Gruppe an"
          ></textarea>
        </div>
      </form>
      <div class="modal-footer">
        <button class="button button--ghost" type="button" data-close-structure-modal>Abbrechen</button>
        <button class="button" type="button" data-save-group>Gruppe speichern</button>
      </div>
    </div>
  </div>
</div>
