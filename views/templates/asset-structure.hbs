<div class="asset-structure-app" data-app="asset-structure">
  <aside class="asset-structure-sidebar" aria-label="Asset-Struktur-Navigation">
    <div class="sidebar-section">
      <a href="/asset-structure" class="sidebar-link sidebar-link--active">Kategorien</a>
      <a href="/asset-types" class="sidebar-link">Asset-Typen</a>
    </div>
  </aside>
  <section class="asset-structure-content">
    <header class="page-header">
      <div>
        <h1 class="page-title">Asset-Struktur</h1>
        <p class="page-subtitle">Verwalten Sie die Kategorien und Asset-Typen, die Ihr Asset-Inventar strukturieren.</p>
      </div>
    </header>
    <div class="structure-body">
      <section class="structure-section" aria-labelledby="categories-title">
        <h2 class="section-title" id="categories-title">Kategorien</h2>
        <div class="card structure-card">
          {{#if categories.length}}
            <div class="table-wrapper">
              <table class="table table--interactive" aria-describedby="categories-title">
                <thead>
                  <tr>
                    <th scope="col">Kategorie</th>
                    <th scope="col">Übergeordnete Kategorie</th>
                    <th scope="col">Verantwortlich</th>
                    <th scope="col">Integrität</th>
                    <th scope="col">Verfügbarkeit</th>
                    <th scope="col">Vertraulichkeit</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each categories}}
                    <tr>
                      <td><a class="table-link" href="/asset-structure/categories/{{id}}">{{title}}</a></td>
                      <td><a class="table-link" href="/asset-structure/categories/{{id}}">{{governingCategory}}</a></td>
                      <td><a class="table-link" href="/asset-structure/categories/{{id}}">{{owner}}</a></td>
                      <td><a class="table-link" href="/asset-structure/categories/{{id}}">{{integrity}}</a></td>
                      <td><a class="table-link" href="/asset-structure/categories/{{id}}">{{availability}}</a></td>
                      <td><a class="table-link" href="/asset-structure/categories/{{id}}">{{confidentiality}}</a></td>
                    </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          {{else}}
            <p class="empty-state">Noch keine Kategorien erfasst. Legen Sie Ihre erste Kategorie an.</p>
          {{/if}}
        </div>
      </section>

    </div>
  </section>
</div>

