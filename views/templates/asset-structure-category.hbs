<div
  class="asset-structure-app"
  data-app="asset-structure"
  data-category-id="{{category.id}}"
  data-category-group-count="{{groupCount}}"
>
  <aside class="asset-structure-sidebar" aria-label="Asset-Struktur-Navigation">
    <div class="sidebar-section">
      <a href="/asset-structure" class="sidebar-link sidebar-link--active">Kategorien</a>
      <a href="/asset-types" class="sidebar-link">Asset-Typen</a>
    </div>
  </aside>
  <section class="asset-structure-content">
    <header class="page-header">
      <div>
        <h1 class="page-title">{{#if category.displayTitle}}{{category.displayTitle}}{{else}}Unbenannte Kategorie{{/if}}</h1>
        <p class="page-subtitle">Aktualisieren Sie die Kategoriedetails und verwalten Sie die zugehörigen Gruppen.</p>
      </div>
      <div class="page-actions">
        <a class="button button--ghost" href="/asset-structure">Zur Übersicht</a>
        <button
          class="button button--danger"
          type="button"
          data-delete-category
          data-confirm="Diese Kategorie löschen? Dieser Vorgang kann nicht rückgängig gemacht werden."
          data-disabled-title="Kategorie kann nicht gelöscht werden, solange Gruppen zugeordnet sind."
          {{#if groupCount}}
            disabled
            aria-disabled="true"
            title="Kategorie kann nicht gelöscht werden, solange Gruppen zugeordnet sind."
          {{/if}}
        >
          Kategorie löschen
        </button>
      </div>
    </header>

    <div class="structure-body">
      <section class="card structure-card" aria-labelledby="category-details-title">
        <div class="section-header">
          <h2 class="section-title" id="category-details-title">Kategorieninformationen</h2>
          <button class="button" type="button">Änderungen speichern</button>
        </div>
        <form class="form-grid form-grid--two">
          <div class="form-field">
            <label for="category-name">Kategorietitel</label>
            <input
              id="category-name"
              type="text"
              name="title"
              value="{{category.title}}"
              placeholder="Kategorietitel eingeben"
            />
          </div>
          <div class="form-field">
            <label for="category-governing">Übergeordnete Kategorie</label>
            <input
              id="category-governing"
              type="text"
              name="governing_category"
              value="{{category.governingCategory}}"
              placeholder="z. B. Operativ"
            />
          </div>
          <div class="form-field">
            <label for="category-owner">Verantwortlich</label>
            <input
              id="category-owner"
              type="text"
              name="owner"
              value="{{category.owner}}"
              placeholder="z. B. Asset-Governance"
            />
          </div>
          <div class="form-field">
            <label for="category-integrity">Integrität</label>
            <select id="category-integrity" name="integrity">
              <option value="" {{#unless category.integrity}}selected{{/unless}}>Bewertung auswählen</option>
              <option {{#if (eq category.integrity 'Low')}}selected{{/if}}>Niedrig</option>
              <option {{#if (eq category.integrity 'Moderate')}}selected{{/if}}>Mittel</option>
              <option {{#if (eq category.integrity 'High')}}selected{{/if}}>Hoch</option>
            </select>
          </div>
          <div class="form-field">
            <label for="category-availability">Verfügbarkeit</label>
            <select id="category-availability" name="availability">
              <option value="" {{#unless category.availability}}selected{{/unless}}>Bewertung auswählen</option>
              <option {{#if (eq category.availability 'Low')}}selected{{/if}}>Niedrig</option>
              <option {{#if (eq category.availability 'Moderate')}}selected{{/if}}>Mittel</option>
              <option {{#if (eq category.availability 'High')}}selected{{/if}}>Hoch</option>
            </select>
          </div>
          <div class="form-field">
            <label for="category-confidentiality">Vertraulichkeit</label>
            <select id="category-confidentiality" name="confidentiality">
              <option value="" {{#unless category.confidentiality}}selected{{/unless}}>Bewertung auswählen</option>
              <option {{#if (eq category.confidentiality 'Low')}}selected{{/if}}>Niedrig</option>
              <option {{#if (eq category.confidentiality 'Moderate')}}selected{{/if}}>Mittel</option>
              <option {{#if (eq category.confidentiality 'High')}}selected{{/if}}>Hoch</option>
            </select>
          </div>
          <div class="form-field form-field--full">
            <label for="category-description">Beschreibung</label>
            <textarea
              id="category-description"
              name="description"
              rows="4"
              placeholder="Beschreiben Sie, wie diese Kategorie verwendet wird"
            >{{category.description}}</textarea>
          </div>
        </form>
      </section>

      <section class="card structure-card" aria-labelledby="groups-title">
        <div class="section-header">
          <h2 class="section-title" id="groups-title">Gruppen</h2>
          <button class="button" type="button" data-open-structure-modal="group">Gruppe hinzufügen</button>
        </div>
        {{#if groups.length}}
          <div class="table-wrapper">
            <table class="table table--interactive" aria-describedby="groups-title">
              <thead>
                <tr>
                  <th scope="col">Gruppe</th>
                  <th scope="col">Status</th>
                  <th scope="col">Asset-Typ</th>
                  <th scope="col">Zuletzt aktualisiert</th>
                </tr>
              </thead>
              <tbody>
                {{#each groups}}
                  <tr>
                    <td>
                      <a class="table-link" href="/asset-structure/categories/{{../category.id}}/groups/{{id}}">{{title}}</a>
                    </td>
                    <td>
                      <a class="table-link" href="/asset-structure/categories/{{../category.id}}/groups/{{id}}">{{status}}</a>
                    </td>
                    <td>
                      <a class="table-link" href="/asset-structure/categories/{{../category.id}}/groups/{{id}}">{{assetType}}</a>
                    </td>
                    <td>
                      <a class="table-link" href="/asset-structure/categories/{{../category.id}}/groups/{{id}}">{{updatedAt}}</a>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        {{else}}
          <p class="empty-state">Es sind noch keine Gruppen mit dieser Kategorie verknüpft.</p>
        {{/if}}
      </section>
    </div>
  </section>
</div>

<div class="modal" data-structure-modal="group" hidden aria-hidden="true">
  <div class="modal-dialog" role="dialog" aria-modal="true" aria-labelledby="group-modal-title">
    <header class="modal-header">
      <h2 id="group-modal-title">Gruppe hinzufügen</h2>
      <button class="icon-button" type="button" aria-label="Gruppenformular schließen" data-close-structure-modal>&times;</button>
    </header>
    <div class="modal-body">
      <form class="form-grid">
        <div class="form-field">
          <label for="group-title">Titel</label>
          <input
            id="group-title"
            type="text"
            name="title"
            placeholder="z. B. Kundenorientierte Anwendungen"
            data-auto-focus
          />
        </div>
        <div class="form-field">
          <label for="group-description">Beschreibung</label>
          <textarea
            id="group-description"
            name="description"
            rows="4"
            placeholder="Geben Sie eine kurze Zusammenfassung dieser Gruppe an"
          ></textarea>
        </div>
      </form>
      <div class="modal-footer">
        <button class="button button--ghost" type="button" data-close-structure-modal>Abbrechen</button>
        <button class="button" type="button" data-save-group>Gruppe speichern</button>
      </div>
    </div>
  </div>
</div>
